<h3>Comments:</h3>
<%= form_for [@list, @comment] do |f| %>
  <div class="field">
    <%= f.label "New Comment" %>
    <%= f.text_field :body %>
    <% @comment.list = @list %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>
<ul>

        binding.pry
  <% if @comments %>
    <% @comments.each do |c| %>
      <li>
        <%= c.body %>
