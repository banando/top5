<div class="text-center top">
    <h1><strong>Top 5</strong></h1>
</div>

<p id = topper>
  <% if current_user %>
    <%= link_to "add your own Top 5", new_list_path %>
  <% end %>
</p>

<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4">
      <a class="plain-link" href="/lists/<%= list.id %>">
        <table class="table table-condensed table-bordered">
          <tbody>
            <tr><th>Topic: <%= list.topic %></th></tr>
            <tr><td>1. <%= list.first %> </td></tr>
            <tr><td>2. <%= list.second %> </td></tr>
            <tr><td>3. <%= list.third %> </td></tr>
            <tr><td>4. <%= list.fourth %> </td></tr>
            <tr><td>5. <%= list.fifth %> </td></tr>
            <% if current_user == list.user %>
            <tr><td>
            <%= link_to 'Edit', edit_list_path(list) %>
            &nbsp;&nbsp;|&nbsp;&nbsp;
            <%= link_to 'Delete', list, method: :delete, data: {confirm: 'Are you sure'} %>
            &nbsp;&nbsp;|&nbsp;&nbsp;
            <%= link_to 'Like ' , list_path(list, vote: true), method: :put %>
            (<%= list.likes %>)
            <% end %>
            </td></tr>
          </tbody>
        </table>
        </a>
      </div>
    <% end %>
  </div>
</div>
